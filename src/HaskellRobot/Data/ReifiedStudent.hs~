module HaskellRobot.Data.ReifiedStudent
       ( ReifiedStudent (..)
       , Task           (..)
       , TaskId
       , TaskSet
       ) where

type TaskId  = Int
type TaskSet = [String]

data Task = Task
    { taskId      :: TaskId
    , taskContent :: String
    } deriving (Show)

-- | This student either contains number of tasks or real tasks
-- for his test.
data ReifiedStudent a = ReifiedStudent
    { variant :: Int
    , name    :: String
    , tasks   :: [a]
    } deriving (Show)
